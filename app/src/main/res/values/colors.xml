<resources>
    <!-- 基础纯色（黑白灰）- 通用底色、文字、分割线核心色 -->
    <color name="white">#FFFFFF</color> <!-- 纯白：页面底色、卡片底色、高亮文字 -->
    <color name="black">#000000</color> <!-- 纯黑：主要标题、强对比文字、图标 -->
    <color name="gray_100">#F5F5F5</color> <!-- 浅灰1：页面背景、列表项底色，低对比 -->
    <color name="gray_200">#EEEEEE</color> <!-- 浅灰2：轻微分割线、可点击区域底色 -->
    <color name="gray_300">#E0E0E0</color> <!-- 浅灰3：常规分割线、输入框边框 -->
    <color name="gray_400">#BDBDBD</color> <!-- 中灰1：次要图标、禁用状态文字/图标 -->
    <color name="gray_500">#9E9E9E</color> <!-- 中灰2：辅助说明文字、占位符文字 -->
    <color name="gray_600">#757575</color> <!-- 中灰3：二级标题、次要内容文字 -->
    <color name="gray_700">#616161</color> <!-- 深灰1：一级副标题、重要辅助文字 -->
    <color name="gray_800">#424242</color> <!-- 深灰2：主要内容文字、常规图标 -->
    <color name="gray_900">#212121</color> <!-- 深灰3：核心标题、加粗文字、强对比图标 -->

    <!-- 常用基础色系 - 功能按钮、强调色、标签、状态提示核心色 -->
    <color name="red">#FF0000</color> <!-- 正红：错误提示、删除按钮、危险操作、未读角标 -->
    <color name="orange">#FF9800</color> <!-- 橙：警告提示、待办状态、温馨提醒、次要操作 -->
    <color name="yellow">#FFFF00</color> <!-- 明黄：高亮提示、重点标记、活动标签 -->
    <color name="green">#4CAF50</color> <!-- 草绿：成功提示、完成状态、确认按钮、进度条 -->
    <color name="blue">#2196F3</color> <!-- 天蓝：主色调、品牌色、普通按钮、链接文字 -->
    <color name="cyan">#00BCD4</color> <!-- 青蓝：科技感配色、辅助功能按钮、信息提示 -->
    <color name="purple">#9C27B0</color> <!-- 紫：个性品牌色、特殊标签、会员/专属标识 -->
    <color name="pink">#E91E63</color> <!-- 玫粉：女性向配色、收藏按钮、爱心/关注图标 -->
    <color name="brown">#795548</color> <!-- 棕：复古/质感配色、分类标签、次要标识 -->
    <color name="teal">#009688</color> <!-- 墨绿：沉稳配色、导航栏、底部栏底色 -->
    <color name="indigo">#3F51B5</color> <!-- 藏蓝：高端品牌色、导航文字、选中状态 -->

    <!-- 浅色系 - 低饱和背景、轻量标签、弱强调区域，不突兀不刺眼 -->
    <color name="red_light">#FFEBEE</color> <!-- 浅红：错误提示背景、危险操作区域底色 -->
    <color name="blue_light">#E3F2FD</color> <!-- 浅蓝：主色调背景、搜索框/输入框底色 -->
    <color name="green_light">#E8F5E9</color> <!-- 浅绿：成功提示背景、完成状态区域底色 -->
    <color name="yellow_light">#FFFDE7</color> <!-- 浅黄：警告提示背景、待办区域底色 -->
    <color name="purple_light">#F3E5F5</color> <!-- 浅紫：个性背景、会员区域轻量底色 -->

    <!-- 深色系 - 强强调按钮、选中状态、重要图标，饱和度更高对比更强 -->
    <color name="red_dark">#D32F2F</color> <!-- 深红：危险操作按钮（点击态）、重要错误标识 -->
    <color name="blue_dark">#1976D2</color> <!-- 深蓝：主按钮（点击态）、导航栏选中文字 -->
    <color name="green_dark">#388E3C</color> <!-- 深绿：确认按钮（点击态）、重要完成标识 -->
    <color name="yellow_dark">#FBC02D</color> <!-- 深黄：警告按钮（点击态）、重点高亮标识 -->
    <color name="purple_dark">#7B1FA2</color> <!-- 深紫：专属按钮（点击态）、会员核心标识 -->

    <!-- 透明色 - 遮罩、半透背景、镂空效果，开发高频使用 -->
    <color name="transparent">#00000000</color> <!-- 全透明：镂空背景、无底色元素 -->
    <color name="black_50">#80000000</color> <!-- 50%透明黑：弹窗遮罩、半透背景层 -->
    <color name="white_50">#80FFFFFF</color> <!-- 50%透明白：亮色背景遮罩、浅色系半透层 -->

</resources>